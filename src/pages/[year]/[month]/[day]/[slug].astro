// This route is now handled by the new blog structure with year-based folders
// For legacy URLs from the WordPress-style format (YYYY/MM/DD/slug)
// Since we've migrated all posts to year-based folders (/blog/2020/post-name),
// we'll just redirect all old-style URLs to the homepage for now

export async function getStaticPaths() {
  // Return a fixed set of routes for testing
  return [
    {
      params: { year: "2020", month: "01", day: "01", slug: "test" },
      props: {},
    },
  ];
}

// Redirect to the blog homepage
return Astro.redirect("/blog/", 301);
