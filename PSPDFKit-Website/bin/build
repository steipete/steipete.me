#!/usr/bin/env bash

set -euxo pipefail
: ${PSPDFKIT_ENV:="production"}

bundle install --path ../../shared/vendor/bundle
yarn install
NO_CONTRACTS=true bundle exec middleman build

for p in android ios web macos windows server; do
  cp -R pre-built/guides/$p build/guides/
done

cp -R pre-built/guides/images build/guides
cp source/versions.json build
cp -R pre-built/webassembly-benchmark build
cp -R pre-built/pwa build
