<div class="hero hero-sdk">
  <div class="container mb-4">
    <div class="row justify-content-center text-center">
      <div class="col-lg-12">
        <header>
          <h6 class="text-brand">Mobile and Web PDF SDKs</h6>
          <h1>Excellent PDF Support, Everywhere</h1>
        </header>
      </div>
      <div class="col-lg-7">
        <p>
          Provide the best user experience on every major platform — including iOS, Android, Windows, macOS, and the Web — with our PDF SDKs.
        </p>
      </div>
    </div>
    <div class="btn-group flex-column flex-md-row sh-2">
      <% %w(ios android web windows macos).each do |p| %>
        <a href="/pdf-sdk/<%= p %>/" class="btn btn-inverse-brand">
          <div class="d-flex align-items-center py-2 px-2 px-lg-3 pr-lg-5">
            <i class="fa fa-xl fa-<%= p %> text-<%= p %> mr-3"></i>
            <div class="text-left">
              PSPDFKit<br class="d-none d-md-block" />
              <span class="text-muted small">for <%= platform_name(p) %></span>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
