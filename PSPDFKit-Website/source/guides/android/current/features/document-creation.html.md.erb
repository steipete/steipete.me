    final Bitmap bitmap = BitmapFactory.decodeStream(context.getAssets().open("inline-media/images/cover.jpg"));
    task.addNewPage(
        NewPage.emptyPage(NewPage.PAGE_SIZE_A0)
            .withPageItem(new PageImage(bitmap, PagePosition.CENTER))
            .build(),
        1);

