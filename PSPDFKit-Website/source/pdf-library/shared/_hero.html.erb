<style>
  #hero {
    height: 630px;
    display: flex;
    align-items: center;
    background-image: url("/images/pdf-library/hero.png");
    background-repeat: no-repeat;
    background-position: 40% 0;
    background-size: 1046px 634px;
    margin-top: -30px;
  }
  @media (min-width: 768px) {
    #hero {
      background-position: 0 0;
    }
  }
  @media (min-width: 992px) {
    #hero {
      background-position: 38vw 0;
    }
  }
  #hero::after {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    display: block;
    width: 100%;
    height: 480px;
    background-image: linear-gradient(#5e5ceb 0%, #8858e8 100%);
    z-index: -1;
  }
</style>
<header id="hero">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-md-9 col-lg-6">
        <div class="card">
          <div class="card-body pb-0">
            <div class="d-flex">
              <h1 class="mb-4 text-alt-dark">
                <%= title %>
              </h1>
              <i class="fa fa-xl <%= icon %> text-alt"></i>
            </div>
            <p class="text-alt-light">
              A powerful solution for batch processing, manipulating, and editing PDF documents.
            </p>
          </div>
          <div class="card-footer bg-alt-neutral py-4 d-flex justify-content-between align-items-center">
            <a href="/try/" class="btn btn-alt w-50 mr-3">
              Download Trial
            </a>
            <a href="/sales/" class="btn btn-alt-outline w-50 ml-3">
              Contact Sales
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
