<%
title = meta_title(current_page)
description = meta_description(current_page)
%>

<meta charset="utf-8">

<!-- Title -->
<title><%= title %></title>

<!-- Custom Meta Tags -->
<meta name="pspdf-platform" content="<%= current_platform %>" />
<meta name="pspdf-versions-url" content="<%= url_for('/versions.json') %>" />
<meta name="pspdf-version" content="<%= current_guide_version %>" />
<meta name="pspdf-license-api-url" content="<%= LICENSE_API_URL %>" />
<% if available_platforms.present? %>
<meta name="pspdf-available-platforms" content='<%= available_platforms.to_json %>' />
<% end %>
<% if current_page.data.alternate_platform_links.present? %>
<meta name="pspdf-alternate-platform-links" content='<%= current_page.data.alternate_platform_links.to_json %>' />
<% end %>

<!-- Meta Tags -->
<% if current_page.data.secret %>
<meta name="robots" content="noindex">
<% end %>
<% if description %>
<meta name="description" content="<%= description %>">
<% end %>
<meta name="author" content="PSPDFKit GmbH">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta http-equiv="x-ua-compatible" content="ie=edge">
<meta name="google-site-verification" content="g1VvuwFhcGLYbXP6GDc-_FOzge6KdciTFKKSuEMmAbk">
<meta name="format-detection" content="telephone=no">
<link rel="canonical" href="https://pspdfkit.com<%= current_page.url %>">
<meta name="theme-color" content="#3d73d3">

<!-- Open Graph Tags -->
<meta property="og:site_name" content="PSPDFKit">
<meta property="og:title" content="<%= title %>">
<meta property="og:type" content="website">
<% if description %>
<meta property="og:description" content="<%= description %>">
<% end %>
<meta property="og:image" content="<%= preview_image(current_page) %>">

<!-- Twitter Card Tags -->
<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="@pspdfkit">
<meta name="twitter:title" content="<%= title %>">
<% if description %>
<meta name="twitter:description" content="<%= description %>">
<% end %>
<meta name="twitter:image" content="<%= preview_image(current_page) %>">

<!-- Links -->
<link href="/blog/feed.atom" type="application/atom+xml" rel="alternate" title="Inside PSPDFKit">

<!-- DNS Prefetching -->
<link rel="preconnect" href="https://vars.hotjar.com">
<link rel="preconnect" href="https://static.hotjar.com">
<link rel="preconnect" href="https://script.hotjar.com">
<link rel="preconnect" href="https://static.getclicky.com">
