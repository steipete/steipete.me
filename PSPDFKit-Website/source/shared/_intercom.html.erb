<!-- Intercom -->
<script>
  window.intercomSettings = { app_id: '<%= INTERCOM_APP_ID %>' };
</script>
<script>
  // Defer loading to improve page speed.
  setTimeout(function() {
    (function() {
      var w = window;
      var ic = w.Intercom;
      if (typeof ic === "function") {
        ic("reattach_activator");
        ic("update", intercomSettings);
      } else {
        var d = document;
        var i = function() {
          i.c(arguments);
        };
        i.q = [];
        i.c = function(args) {
          i.q.push(args);
        };
        w.Intercom = i;
        function l() {
          var s = d.createElement("script");
          s.type = "text/javascript";
          s.async = true;
          s.defer = true;
          s.src = "https://widget.intercom.io/widget/k2d765xf";
          var x = d.getElementsByTagName("script")[0];
          x.parentNode.insertBefore(s, x);
        }
        l();
      }
    })();
  }, 3000)
</script>
