{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "astro",
  "trailingSlash": false,
  "redirects": [
    { "source": "/posts", "destination": "/", "permanent": true },
    {
      "source": "/:year(\\d{4})/:month(\\d{2})/:day(\\d{2})/:slug",
      "destination": "/blog/:slug/",
      "permanent": true
    },
    {
      "source": "/blog/:year(\\d{4})/:month(\\d{2})/:day(\\d{2})/:slug",
      "destination": "/blog/:slug/",
      "permanent": true
    },
    {
      "source": "/blog/:slug([^\\/]+)$",
      "destination": "/blog/:slug/",
      "permanent": true
    },
    {
      "source": "/categories/:category(.*)",
      "destination": "/tags/:category",
      "permanent": true
    },
    { "source": "/tag/:tag", "destination": "/tags/:tag", "permanent": true },
    {
      "source": "/20:year/:month/:day/:slug(.*)",
      "destination": "/blog/:slug/",
      "permanent": true
    },
    {
      "source": "/blog/a-new-beginning/",
      "destination": "/blog/finding-my-spark-again/",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "(?!steipete\\.me).*" }],
      "destination": "https://steipete.me/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "(?!steipete\\.me).*"
        }
      ],
      "destination": "https://steipete.me/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https://steipete.me https://*.vercel.app; script-src 'self' 'unsafe-inline' https://steipete.me https://*.vercel.app; style-src 'self' 'unsafe-inline' https://steipete.me https://*.vercel.app; img-src 'self' data: https://steipete.me https://*.vercel.app; font-src 'self' https://steipete.me https://*.vercel.app; connect-src 'self' https://steipete.me https://*.vercel.app; media-src 'self' https://steipete.me https://*.vercel.app; object-src 'none'; frame-ancestors 'none'"
        }
      ]
    }
  ]
}
